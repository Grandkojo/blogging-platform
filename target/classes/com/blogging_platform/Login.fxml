<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.blogging_platform.LoginUserController"
            prefHeight="500.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
        <children>

            <!-- Title -->
            <Label text="User Login"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email" style="-fx-font-size: 14px;" />
                <TextField fx:id="userEmail"
                           promptText="Enter email - eg@example.com"
                           prefWidth="350" />
                <Label fx:id="emailError"
                       text="Email is required"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"
                       visible="false" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 14px;" />
                <PasswordField fx:id="userPassword"
                               promptText="Enter password"
                               prefWidth="350" />
                <Label fx:id="passwordError"
                       text="Password is required"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"
                       visible="false" />
            </VBox>

            <!-- Login Button -->
            <Button text="Login"
                    onAction="#loginUser"
                    prefWidth="350"
                    prefHeight="45"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;" />

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Text text="Don't have an account?" style="-fx-font-size: 14px;" />
                <Hyperlink text="Register" onAction="#switchToRegister"
                           style="-fx-font-size: 14px; -fx-text-fill: #2980b9;" />
            </HBox>

        </children>
    </VBox>

    <!-- Background styling (optional) -->
    <style>
        -fx-background-color: #f8f9fa;
    </style>

</AnchorPane>