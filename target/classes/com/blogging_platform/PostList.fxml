<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blogging_platform.PostListController">

    <top>
        <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20;">
         <Button mnemonicParsing="false" onAction="#gotHome" text="â† Home" />
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="My Blog Posts" />
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchField" prefWidth="350" promptText="Search by title or author..." />
                <Button onAction="#searchPosts" text="Search" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#openAddPost" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px;" text="Add New Post" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="postsTable">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="220" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="300" text="Title" />
                <TableColumn fx:id="authorColumn" prefWidth="150" text="Author" />
                <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                <TableColumn fx:id="dateColumn" prefWidth="150" text="Published" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 20;">
            <Button fx:id="editButton" onAction="#editPost" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Edit Selected" />
            <Button fx:id="deleteButton" onAction="#deletePost" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Delete Selected" />
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="10" left="30" right="30" top="10" />
    </padding>
</BorderPane>
