<GridPane prefHeight="370.0" prefWidth="484.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blogging_platform.RegisterUserController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label prefHeight="22.0" prefWidth="94.0" text="Name" />
      <Label prefHeight="22.0" prefWidth="94.0" text="Email" GridPane.rowIndex="2" />
      <Label prefHeight="22.0" prefWidth="94.0" text="Role" GridPane.rowIndex="4" />
      <TextField fx:id="userName" prefHeight="26.0" prefWidth="291.0" promptText="Enter name" GridPane.rowIndex="1" />
      <ComboBox fx:id="userRole" prefWidth="150.0" GridPane.rowIndex="5" />
      <Button mnemonicParsing="false" onAction="#submitUser" text="Submit" GridPane.rowIndex="6" />
      <TextField fx:id="userEmail" prefHeight="24.0" prefWidth="454.0" promptText="Enter email - eg@example.com" GridPane.rowIndex="3" />
   </children>
   <padding>
      <Insets bottom="20.0" left="10.0" right="20.0" top="10.0" />
   </padding>
