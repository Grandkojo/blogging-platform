<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blogging_platform.PostHomeController">

    <VBox spacing="30" style="-fx-padding: 40 60 60 60; -fx-background-color: #f8f9fa;">

        <!-- Header: Title, Links, Search -->
        <VBox spacing="20">

            <!-- Top Bar: Title + Links -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="All Blog Posts" />

                <Region HBox.hgrow="ALWAYS" />

                <Hyperlink fx:id="blogLink" onAction="#goToPostList" style="-fx-font-size: 15px; -fx-text-fill: #3498db;" text="Your Blogs" visible="false" />

                <Hyperlink onAction="#logout" style="-fx-font-size: 15px; -fx-text-fill: #e74c3c;" text="Logout" />
            </HBox>

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="12">
                <TextField fx:id="searchField" prefWidth="500" promptText="Search by title or author..." style="-fx-font-size: 16px; -fx-padding: 12; -fx-background-radius: 10;" />

                <Button onAction="#searchPosts" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 12 20; -fx-background-radius: 10;" text="Search" />
            </HBox>

        </VBox>

        <!-- Cards Grid -->
        <FlowPane fx:id="postsFlowPane" alignment="CENTER" hgap="30" style="-fx-padding: 20;" vgap="30" />

    </VBox>

</ScrollPane>
