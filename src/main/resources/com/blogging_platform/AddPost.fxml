<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.blogging_platform.AddPostController"
            prefHeight="700.0" prefWidth="700.0">

    <VBox alignment="CENTER" spacing="25" style="-fx-padding: 50;">
        <children>

            <!-- Title -->
            <Label text="Add New Post"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Title Field -->
            <VBox spacing="5">
                <Label text="Title" style="-fx-font-size: 14px;" />
                <TextField fx:id="postTile"
                           promptText="Enter post title"
                           prefWidth="450" />
                <Label fx:id="postTitleError"
                       text="Title is required"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"
                       visible="false" />
            </VBox>

            <!-- Content Field -->
            <VBox spacing="5">
                <Label text="Content" style="-fx-font-size: 14px;" />
                <TextArea fx:id="postContent"
                          promptText="Write your post content here..."
                          prefHeight="250.0"
                          prefWidth="450"
                          wrapText="true" />
                <Label fx:id="postContentError"
                       text="Content is required"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"
                       visible="false" />
            </VBox>

            <!-- Status Field -->
            <VBox spacing="5">
                <Label text="Status" style="-fx-font-size: 14px;" />
                <ComboBox fx:id="postStatus"
                          promptText="Select status"
                          prefWidth="450" />
                <Label fx:id="postStatusError"
                       text="Please select a status"
                       style="-fx-text-fill: red; -fx-font-size: 12px;"
                       visible="false" />
            </VBox>

            <!-- Submit Button -->
            <Button text="Submit Post"
                    onAction="#submitPost"
                    prefWidth="450"
                    prefHeight="50"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);" />

        </children>
    </VBox>

    <!-- Background -->
    <style>
        -fx-background-color: linear-gradient(to bottom, #f0f8ff, #e8f5e9);
        -fx-font-family: "Segoe UI", sans-serif;
    </style>

</AnchorPane>