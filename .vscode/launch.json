{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "java",
            "name": "Launch Blogging Platform",
            "request": "launch",
            "mainClass": "com.blogging_platform.App",
            "projectName": "blogging_platform",
            "modulePaths": [
                "${workspaceFolder}/target/classes",
                "${env:HOME}/.m2/repository/org/openjfx/javafx-base/25/javafx-base-25-linux.jar",
                "${env:HOME}/.m2/repository/org/openjfx/javafx-controls/25/javafx-controls-25-linux.jar",
                "${env:HOME}/.m2/repository/org/openjfx/javafx-fxml/25/javafx-fxml-25-linux.jar",
                "${env:HOME}/.m2/repository/org/openjfx/javafx-graphics/25/javafx-graphics-25-linux.jar"
            ],
            "vmArgs": [
                "--enable-native-access=javafx.graphics"
            ]
        }
    ]
}

